<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:contentDescription="@string/game_image_content_description"
            android:id="@+id/iv_game_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_game_img"/>

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/iv_game_image"
            android:textColor="@color/colorAccent"
            tools:text="@string/game_name"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_game_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/tv_game_name"
            tools:text="@string/game_description"
            />
        <View
            android:id="@+id/v_game_details_divider"
            android:layout_below="@+id/tv_game_description"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="5dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_view_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_game"
            android:textSize="12sp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_below="@+id/tv_game_description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
